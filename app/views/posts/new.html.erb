<%= render 'navigation'%>
<br>
<div class="sign-in-form container">
  <div class="sign-in-brand"><a href="<%= root_path %>" class="logo">Blog On Rails</a></div><br>
  <%= form_with model: @post, local: true do |f|%>
    <div class="sign-in-content">
    <h3><strong>Create Post</strong></h3>
    <% if @post.errors.present?%>
    <p style="color:red;">
      <%= @post.errors.full_messages.join(', ') %>
    </p>
    <% end %>
    <strong><%= f.label :title, "Title"%></strong>
    <%= f.text_field :title, style:"width:100%;"%><br>
    <strong><%= f.label :body, "Body", cols:50, rows:3%></strong>
    <%= f.text_area :body, style:"width:100%;"%><br>
    <div>
      <%= f.submit "Create Your Post", style:"width:100%;", class:"sign-in-button"%><br>
      <p class="terms-of-use"><br>
        By creating a Post, you agree to Blog on Rails's<br>
        <strong style="color:#0000EE;">Conditions of Use</strong> and <strong style="color:#0000EE;">Privacy
        Notice</strong>.</p>
        
      <% end %>
    </div>
  </div>
</div>